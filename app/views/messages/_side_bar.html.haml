.side-bar
  .user-box
    .user-box__top-items
      .user-box__top-items__name 
        = current_user.name
        .user-box__top-items__name__icons
          .icon--edit
            = link_to new_group_path do
              = icon('far', 'edit', class: 'icons__btn')
          .icon--cod
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'icons__btn')
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message
